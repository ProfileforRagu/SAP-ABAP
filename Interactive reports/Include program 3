*&---------------------------------------------------------------------*
*& Include          ZINC_INTRACTIVE_FETCH
*&---------------------------------------------------------------------*
*&---------------------------------------------------------------------*
*& Form get_vbak
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM get_vbak .
  SELECT vbeln audat kunnr vbtyp FROM vbak INTO TABLE it_vbak WHERE vbeln IN s_vbeln.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form s_vbeln_init
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM s_vbeln_init .

  s_vbeln-sign = 'I'.
  s_vbeln-option = 'EQ'.
  s_vbeln-low = ''.
  s_vbeln-high = '20'.
  APPEND s_vbeln TO s_vbeln[].

ENDFORM.
*&---------------------------------------------------------------------*
*& Form validate_s_vbeln
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM validate_s_vbeln .
  DATA iv_vbeln TYPE vbak-vbeln.

  SELECT SINGLE vbeln  FROM vbak INTO iv_vbeln WHERE vbeln IN s_vbeln.
  IF sy-subrc NE 0.
    MESSAGE 'please check your input' TYPE 'I' DISPLAY LIKE 'E'.
  ENDIF.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form dis_data
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM dis_data .
  LOOP AT it_vbak INTO wa_vbak.
    WRITE : / wa_vbak-vbeln,wa_vbak-audat,wa_vbak-kunnr,wa_vbak-vbtyp.
    HIDE :  wa_vbak-vbeln,wa_vbak-audat,wa_vbak-kunnr,wa_vbak-vbtyp.
  ENDLOOP.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form vbak_header
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM vbak_header .
  WRITE : / 'Sales header information by : ',sy-uname .
ENDFORM.
*&---------------------------------------------------------------------*
*& Form get_vbap
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM get_vbap .
  IF it_vbak IS NOT INITIAL.
    SELECT vbeln
           posnr
           matnr
           werks
           kwmeng
           netwr FROM vbap INTO TABLE it_vbap WHERE vbeln = wa_vbak-vbeln.
  ENDIF.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form dis_vbap
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM dis_vbap .
  LOOP AT it_vbap INTO wa_vbap.
    WRITE:/ wa_vbap-vbeln,wa_vbap-posnr, wa_vbap-matnr,wa_vbap-werks,wa_vbap-kwmeng,wa_vbap-netwr.

    HIDE :wa_vbap-vbeln,wa_vbap-posnr, wa_vbap-matnr,wa_vbap-werks,wa_vbap-kwmeng,wa_vbap-netwr.
  ENDLOOP.


ENDFORM.
*&---------------------------------------------------------------------*
*& Form get_mara
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM get_mara .
  IF it_vbap IS NOT INITIAL.
    SELECT matnr
           matkl
           zeinr
           mtart FROM mara INTO TABLE it_mara WHERE matnr = wa_vbap-matnr.
  ENDIF.

ENDFORM.
*&---------------------------------------------------------------------*
*& Form dis_mara
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM dis_mara .
  loop at it_mara into wa_mara.
   WRITE : / wa_mara-matnr, wa_mara-matkl,wa_mara-zeinr,wa_mara-mtart.
   ENDLOOP.
ENDFORM.
